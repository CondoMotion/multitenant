<div class="post">
	<p>Posted by <%= @post.user.email %> <%= time_ago_in_words(@post.created_at) %> ago</p>
  <%= @post.title %>
</div>

<p><%= link_to "Edit Post", edit_post_path(@post) %> | <%= link_to "Delete", post_path(@post), method: :delete %></p>
<p><%= link_to "Back", page_url(@post.page, subdomain: @post.page.site.subdomain) %></p>
