<div class="newsPost">
  <h4><%= post.title %></h4>
  <div class="postInfo">
    Posted <%= time_ago_in_words(post.created_at) %> ago
    by <%= post.user.email %> 
  </div>

  <div class="postControls">

      <%= link_to raw("<i class='icon-edit'></i>"), edit_post_path(post) %>

      <%= link_to raw("<i class='icon-trash'></i>"), 
      post, method: :delete, confirm: "Are you sure you want to delete this post?" %>



  </div>
  <div class="postContent"><%= post.content %></i></div>



</div>