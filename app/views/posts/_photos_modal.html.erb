<div id="photosModal" class="modal hide fade" tabindex="-1" role="dialog" 
     aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">
      <% if post.new_record? %>
        New Photo
      <% else %>
        Edit Photo
      <% end %>
    </h3>
  </div>

  <div>
    <%= render "posts/photos_form", :post => post, :page_id => page_id %>
    <button class="btn cancelBtn" data-dismiss="modal" aria-hidden="true">
      Cancel
    </button>
  </div>
</div>
