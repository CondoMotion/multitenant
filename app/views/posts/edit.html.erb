<div class="row-fluid">
  <div class="span2" style="background: #f1f1f1;">
    <ul>
      <% current_site.pages.each do |page| %>
        <li><%= link_to page.name, edit_page_url(page, subdomain: current_site.subdomain) %></li>
      <% end %>
    </ul>
  </div>
  <div class="span10">
  	<h1>Editing post</h1>

		<%= render "#{@post.post_type.downcase}_form" %>

		<p><%= link_to "Back", @post %></p>
  </div>
</div>
