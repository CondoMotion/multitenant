<%= raw @page.content %>

<% if @page.has_posts? && user_signed_in? %>
  <p>New <%= @page.post_type.singularize %></p>
  <%= render "posts/#{@page.post_type.downcase}_form" %>
<% end %>

<% @page.posts.each do |post| %>
  <div class="post">
    <%= link_to post.title, post %> <%= link_to raw("&times;"), post, method: :delete, confirm: "Are you sure?" %>
  </div>
<% end %>

<div style="margin-top: 18px;">
  <%= link_to 'Edit Page', edit_page_path(@page) %>
</div>