<%= simple_format @page.content %>

<%= render 'posts/form' %>

<br>

<% @page.posts.each do |post| %>
  <div class="post">
    <%= link_to post.content, post %> <%= link_to raw("&times;"), post, method: :delete, confirm: "Are you sure?" %>
  </div>
<% end %>

<div>
  <br>
  <%= link_to 'Edit Page', edit_page_path(@page) %>
</div>
