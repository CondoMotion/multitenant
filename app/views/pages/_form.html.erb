<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 5 %>
  </div>

  <div>
    <label class="checkbox">
      <%= f.check_box :has_posts %> Has posts?
    </label>
  </div>
  <div class="field">
    <%= f.label :post_type %>
    <%= f.select :post_type, {"News" => "news", "Documents" => "documents", "Photos" => "photos"} %>
  </div>

  <div class="field">
    <%= f.label :parent_id %>
    <%= f.collection_select :parent_id, Page.order(:name), :id, :name, include_blank: true %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>
<% end %>
